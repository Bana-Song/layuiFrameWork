@{
    ViewBag.Title = "Login";
    Layout = "";
}
@Styles.Render("~/Content/layui/css/layui.css")
@Styles.Render("~/Content/css/global.css")
@Styles.Render("~/Content/css/login.css")
<body class="beg-login-bg">
    <div class="beg-login-box">
        <header>
            <h1>后台登录</h1>
        </header>
        <div class="beg-login-main">
            <form class="layui-form" method="post">
                <input name="__RequestVerificationToken" type="hidden" value="fkfh8D89BFqTdrE2iiSdG_L781RSRtdWOH411poVUWhxzA5MzI8es07g6KPYQh9Log-xf84pIR2RIAEkOokZL3Ee3UKmX0Jc8bW8jOdhqo81" />
                <div class="layui-form-item">
                    <label class="beg-login-icon">
                        <i class="layui-icon">&#xe612;</i>
                    </label>
                    <input type="text" id="username" name="usernum" lay-verify="usernum" autocomplete="off" placeholder="这里输入登录名" class="layui-input">
                </div>
                <div class="layui-form-item">
                    <label class="beg-login-icon">
                        <i class="layui-icon">&#xe642;</i>
                    </label>
                    <input type="password" id="password" name="password" lay-verify="password" autocomplete="off" placeholder="这里输入密码" class="layui-input">
                </div>
                <div class="layui-form-item" style="margin-bottom:0px;">
                    <div class="beg-pull-left beg-login-remember">
                        <label>记住帐号？</label>
                        <input type="checkbox" name="rememberMe" value="true" lay-skin="switch" checked title="记住帐号">
                    </div>
                </div>

                <div class="layui-form-item" style="margin-bottom:0px;">
                    <div class="beg-pull-left beg-login-remember">
                        <label>管理员？</label>
                        <input type="checkbox" name="isadmin" id="isadmin" value="false" lay-filter="admin" lay-skin="switch" title="管理员">
                    </div>
                </div>
                <div class="layui-form-item" style="margin-bottom:5px;">
                    <div class="beg-pull-left beg-login-remember" id="regist" style="cursor:pointer;">
                        注册
                    </div>
                    <div class="beg-pull-right">
                        <button class="layui-btn layui-btn-primary" lay-submit lay-filter="login">
                            登录
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    @Scripts.Render("~/Content/layui/layui.js")
    <script type="text/javascript">
        document.getElementsByTagName("body")[0].setAttribute("class", "beg-login-bg")
        layui.use(['layer', 'form'], function () {
            var layer = layui.layer,
                $ = layui.jquery,
                form = layui.form;
            $("#regist").click(function () {
                location.href = "Regist"
            })

            var localTest = layui.data('logininfo');
            $('#username').val(localTest.usernum)
            $('#password').val(localTest.password)

            //监听指定开关
            form.on('switch(admin)', function (data) {
                $('#isadmin').val(this.checked ? 'true' : 'false')
            });

            //$('#isadmin').attr("checked", $('#isadmin').val());

            form.on('submit(login)', function (data) {
                location.href = "Home/Index";
                return false;
            });
        });
    </script>
</body>